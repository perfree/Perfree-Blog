<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.perfree.mapper.PermissionMapper" >

    <!-- 权限列表分页 -->
    <select id="list" parameterType="com.perfree.model.Permission" resultType="com.perfree.model.Permission">
        select t.* from t_permission t where 1 = 1
        <if test="permissionName !=null and permissionName !=''">
            and t.permissionName like concat(concat('%',#{permissionName}),'%')
        </if>
    </select>
</mapper>
